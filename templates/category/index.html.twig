{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
    <h1>Liste des catégories</h1>

    {% if categories|length > 0 %}
        <div>Il y a {{ categories|length }} catégories au total.</div>

        <table class="table">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.name }}</td>
                    <td>
                        <a href="{{ path('app_category_show', {id: category.id}) }}">Voir</a>
                        <a href="{{ path('app_category_edit', {id: category.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="pagination">
            {% if previous is not null %}
                <a href="{{ path('app_category', { offset: previous }) }}">Précédent</a>
            {% endif %}

            {% if next is not null %}
                <a href="{{ path('app_category', { offset: next }) }}">Suivant</a>
            {% endif %}
        </div>
    {% else %}
        <div>Aucune catégorie n'a été trouvée.</div>
    {% endif %}
{% endblock %}
